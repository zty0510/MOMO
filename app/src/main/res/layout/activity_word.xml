<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hello_bgp"
    tools:context=".View.WordActivity">


    <TextView
        android:id="@+id/TV_Word_Chinese"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="285dp"
        android:gravity="center"
        android:text="ss"
        android:textColor="#207D96"
        android:textSize="50dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/Edit_InputText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="143dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="请输入单词" />

    <Button
        android:id="@+id/TV_nextword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="149dp"
        android:text="下一个单词" />

    <Button
        android:id="@+id/foreSubmit"
        android:layout_width="118dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="595dp"
        android:layout_marginEnd="157dp"
        android:text="提前完成" />
</RelativeLayout>